        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv19"
        app:layout_constraintTop_toBottomOf="@+id/tv17"/>

    <TextView
        android:id="@+id/tv19"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="tv19"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv18"
        app:layout_constraintRight_toLeftOf="@+id/tv20"
        app:layout_constraintTop_toBottomOf="@+id/tv17"/>

    <TextView
        android:id="@+id/tv20"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="tv20"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv19"
        app:layout_constraintRight_toRightOf="parent"

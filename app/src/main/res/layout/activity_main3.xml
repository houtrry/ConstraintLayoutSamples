<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.houtrry.constraintlayoutsamples.Main3Activity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="chainStyle='spread' width='0' \nspread是默认值"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="tv2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv1"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="tv3"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintRight_toLeftOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv1"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="tv4"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="chainStyle='spread' width!='0'\nspread是默认值"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="tv6"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv7"
        app:layout_constraintTop_toBottomOf="@+id/tv5"/>

    <TextView
        android:id="@+id/tv7"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="tv7"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv6"
        app:layout_constraintRight_toLeftOf="@+id/tv8"
        app:layout_constraintTop_toBottomOf="@+id/tv5"/>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="tv8"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5"/>

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv8"/>


    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="chainStyle='spread_inside' width='0' \nspread是默认值"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"/>

    <TextView
        android:id="@+id/tv10"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="tv10"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv11"
        app:layout_constraintTop_toBottomOf="@+id/tv9"/>

    <TextView
        android:id="@+id/tv11"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="tv11"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv10"
        app:layout_constraintRight_toLeftOf="@+id/tv12"
        app:layout_constraintTop_toBottomOf="@+id/tv9"/>

    <TextView
        android:id="@+id/tv12"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="tv12"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv9"/>

    <TextView
        android:id="@+id/tv13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="chainStyle='spread_inside' width!='0'"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv12"/>

    <TextView
        android:id="@+id/tv14"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="tv14"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv15"
        app:layout_constraintTop_toBottomOf="@+id/tv13"/>

    <TextView
        android:id="@+id/tv15"
